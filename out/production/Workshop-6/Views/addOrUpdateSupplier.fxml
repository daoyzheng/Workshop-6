<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AddOrUpdateSupplierController">
   <children>
      <RadioButton fx:id="radioNewSupplier" layoutX="29.0" layoutY="70.0" mnemonicParsing="false" text="Enter new supplier">
         <toggleGroup>
            <ToggleGroup fx:id="tgSupplier" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="radioExistingSupplier" layoutX="29.0" layoutY="44.0" mnemonicParsing="false" selected="true" text="Choose from existing suppliers" toggleGroup="$tgSupplier" />
      <ComboBox fx:id="cbSupplier" layoutX="346.0" layoutY="40.0" prefWidth="150.0" />
      <TextField fx:id="tfNewSupplier" layoutX="29.0" layoutY="110.0" prefHeight="25.0" prefWidth="258.0" />
      <Button fx:id="btnAddSupplier" layoutX="346.0" layoutY="319.0" mnemonicParsing="false" onAction="#btnAddSupplierOnAction" text="Add" />
   </children>
</AnchorPane>
